			<% @rental.images.each do |image| %>
				<% if !image.new_record? %>
					<div class ="item">
						<%= image_tag (root_url + "/images/" + image.filename) %>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
<div class="row">
	<div class="small-12 small-centered columns">
		<div style='width: 100%;'>
			<div id="multi_markers" style='width: 100%; height: 400px;'></div>
		</div>
		<script type="text/javascript">
			var handler = Gmaps.build('Google');
			handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
                var markers = handler.addMarkers([
                        { lat: <%= @rental.latitude%>, lng: <%=@rental.longitude%>},
                        ]);
                handler.bounds.extendWith(markers);
                handler.fitMapToBounds();
                handler.getMap().setZoom(16);
                });
		</script>
		<!-- Distance from CSUC -->
		<% if @rental.geocoded? %>
			<%= @rental.distance_from([39.7276114, -121.8479014]) %>
		<% end %>
	</div>
</div>
