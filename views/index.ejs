<html>
<head>
    <title>Rate My Rental</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
</head>
<body ng-app="flapperNews">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
    </div>

    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1>Rentals</h1>
        </div>

        <div ng-repeat="rental in rentals">
            <span style="font-size:20px; margin-left:10px;">
              <span ng-show="rental.address.full_street_add">
                  {{rental.address.full_street_add}}
              </span>
	      <a ng-click="removeRental(rental)">remove</a>
              <span ng-hide="rental.address.zip_code">
                {{rental.address.zip_code}}
              </span>
            </span>
            <span>
                <a href="#/rentals/{{rental._id}}">Reviews</a>
            </span>
        </div>

        <form ng-submit="addRental()"
              style="margin-top:30px;">
            <h3>Add a new rental</h3>

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Address"
                       ng-model="full_street_add"></input>
                <input type="number"
                       class="form-control"
                       placeholder="street number"
                       ng-model="street_num"></input>
                <input type="text"
                       class="form-control"
                       placeholder="street name"
                       ng-model="street_name"></input>
                <input type="number"
                       class="form-control"
                       placeholder="zip code"
                       ng-model="zip_code"></input>
                <input type="text"
                       class="form-control"
                       placeholder="city"
                       ng-model="city"></input>
                <input type="text"
                       class="form-control"
                       placeholder="country"
                       ng-model="country"></input>
                <input type="number"
                       class="form-control"
                       placeholder="# of bedrooms"
                       ng-model="bedrooms"></input>
                <input type="number"
                       class="form-control"
                       placeholder="# of bathrooms"
                       ng-model="bathrooms"></input>
		is_complex:
                <input type="checkbox"
                       class="form-control"
                       ng-model="is_complex"></input>
                <input type="number"
                       class="form-control"
                       placeholder="# of stories"
                       ng-model="stories"></input>
		company_owned:
                <input type="checkbox"
                       class="form-control"
                       ng-model="company_owned"></input>
                <input type="text"
                       class="form-control"
                       placeholder="owner"
                       ng-model="owner"></input>
		parking:
                <input type="checkbox"
                       class="form-control"
                       ng-model="parking"></input>
		pets:
                <input type="checkbox"
                       class="form-control"
                       ng-model="pets"></input>
		washer_dryer:
                <input type="checkbox"
                       class="form-control"
                       ng-model="washer_dryer"></input>
		pool:
                <input type="checkbox"
                       class="form-control"
                       ng-model="pool"></input>
		spa:
                <input type="checkbox"
                       class="form-control"
                       ng-model="spa"></input>
		gym:
                <input type="checkbox"
                       class="form-control"
                       ng-model="gym"></input>
		dishwasher:
                <input type="checkbox"
                       class="form-control"
                       ng-model="dishwasher"></input>
		central_air:
                <input type="checkbox"
                       class="form-control"
                       ng-model="central_air"></input>
		heater:
                <input type="checkbox"
                       class="form-control"
                       ng-model="heater"></input>
		gas:
                <input type="checkbox"
                       class="form-control"
                       ng-model="gas"></input>
		electricity:
                <input type="checkbox"
                       class="form-control"
                       ng-model="electricity"></input>
		trash:
                <input type="checkbox"
                       class="form-control"
                       ng-model="trash"></input>
		water:
                <input type="checkbox"
                       class="form-control"
                       ng-model="water"></input>
		tv:
                <input type="checkbox"
                       class="form-control"
                       ng-model="tv"></input>
		wifi:
                <input type="checkbox"
                       class="form-control"
                       ng-model="wifi"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>

        </div>
    </script>

    <script type="text/ng-template" id="/rentals.html">
        <div class="page-header">
            <h3>
                <a ng-show="rental.address.full_street_add" href="{{rental.full_street_add}}">
                    {{rental.address.full_street_add}}
                </a>
          <span ng-hide="rental.address.zip_code">
            {{rental.address.zip_code}}
          </span>
            </h3>
        </div>

        <div ng-repeat="review in rental.reviews">
            <span style="font-size:20px; margin-left:10px;">
              comment: {{review.comment}}<br>
              overall: {{review.overall}}<br>
              noise_level: {{review.noise_level}}<br>
              noise_level: {{review.clean_level}}<br>
              noise_level: {{review.neighborhood_safety}}<br>
            </span>
        </div>
	<button ng-click="removeRental()">remove</button>
        <form ng-submit="addReview()"
              style="margin-top:30px;">
            <h3>Add a new review</h3>

            <div class="form-group">
                <input type="number"
                       class="form-control"
                       placeholder="overall"
                       ng-model="overall"></input>
                <input type="number"
                       class="form-control"
                       placeholder="neighborhood_safety"
                       ng-model="neighborhood_safety"></input>
                <input type="number"
                       class="form-control"
                       placeholder="clean_level"
                       ng-model="clean_level"></input>
                <input type="number"
                       class="form-control"
                       placeholder="noise_level"
                       ng-model="noise_level"></input>
                <input type="number"
                       class="form-control"
                       placeholder="price"
                       ng-model="price"></input>
                <input type="text"
                       class="form-control"
                       placeholder="Comment"
                       ng-model="comment"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </script>

</body>
</html>
